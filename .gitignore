# ==========================
# Node.js / npm package .gitignore
# ==========================

# Dependencies
/node_modules
/.pnp
.pnp.js

# Build output
/dist
/build
/lib
/coverage
/.next
/out
/.turbo

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# OS-specific
.DS_Store
Thumbs.db

# IDE / Editor
.vscode/
.idea/
*.swp
*.swo

# Test output
/coverage
/.nyc_output

# Environment files
.env
.env.local
.env.*.local

# Optional caches
/.eslintcache
/.stylelintcache
/.cache
/.parcel-cache
/.next
/.nuxt
/.vuepress/dist

# Temporary files
*.tmp
*.temp

# TypeScript
*.tsbuildinfo

# Local dev only
/example
/examples
/demo
/playground

# npm / yarn / pnpm lock
package-lock.json
yarn.lock
pnpm-lock.yaml

# ==========================
# Special: Files excluded from npm publish
# ==========================
# Nếu bạn muốn kiểm soát thêm khi publish, hãy dùng file .npmignore
# hoặc trong package.json: "files": ["dist", "src/index.js", "README.md"]
