{
  "name": "@dqcai/logger",
  "version": "1.0.2",
  "description": "Universal Logger Library for every environment: React, React Native, Vue, Angular, Node.js, Browser",
  "main": "lib/index.js", 
  "module": "lib/index.esm.js", 
  "browser": "lib/index.umd.js", 
  "types": "lib/index.d.ts", 
  "exports": {
    ".": {
      "require": "./lib/index.js", 
      "import": "./lib/index.esm.js", 
      "browser": "./lib/index.umd.js"
    }
  },
  "files": [
    "lib",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rimraf lib",
    "prepublishOnly": "npm run clean && npm run build && npm run test:all",
    "test": "npm run test:node",
    "test:node": "node test-package.js",
    "test:es": "node test-es-module.mjs",
    "test:browser": "echo 'Open test-browser.html in browser'",
    "test:all": "npm run build && npm run test:node && npm run test:es"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^18.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.49.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "logger",
    "dqcai",
    "doanquoccuong",
    "cuongdq",
    "javascript",
    "typescript",
    "universal",
    "react",
    "react-native",
    "nodejs",
    "browser",
    "library"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuongdqpayment/dqcai-logger.git"
  },
  "author": "Doan Quoc Cuong",
  "bugs": {
    "url": "https://github.com/cuongdqpayment/dqcai-logger/issues"
  },
  "homepage": "https://github.com/cuongdqpayment/dqcai-logger#readme"
}
