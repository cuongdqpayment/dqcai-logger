{
  "name": "@dqcai/logger",
  "version": "2.1.2",
  "description": "Universal Logger Library for every environment: React, React Native, Vue, Angular, Node.js, Browser",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "browser": "lib/index.umd.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "browser": "./lib/index.umd.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/index.d.ts"
      ]
    }
  },
  "files": [
    "lib",
    "README.md",
    "README-LogDecorators.md"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "obfuscate": "node ./scripts/obfuscate.mjs",
    "prepublishOnly": "npm run build && npm run obfuscate && npm run test:all",
    "release": "npm publish --access public",
    "release:patch": "npm version patch && npm run build  && npm run obfuscate && npm publish --access public",
    "release:minor": "npm version minor && npm run build  && npm run obfuscate && npm publish --access public",
    "release:major": "npm version major && npm run build  && npm run obfuscate && npm publish --access public",
    "test": "npm run test:node",
    "test:node": "node ./test/test-package.js",
    "test:es": "node ./test/test-es-module.mjs",
    "test:decorator": "node ./test/test-decorator.js",
    "test:browser": "echo 'Open ./test/test-browser.html in browser'",
    "test:all": "npm run test:node && npm run test:decorator && npm run test:es"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^18.0.0",
    "esbuild": "^0.25.9",
    "javascript-obfuscator": "^4.1.1",
    "obfuscate": "^0.0.11",
    "rimraf": "^6.0.1",
    "rollup": "^4.49.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "logger",
    "dqcai",
    "doanquoccuong",
    "cuongdq",
    "javascript",
    "typescript",
    "universal",
    "react",
    "react-native",
    "nodejs",
    "browser",
    "library"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuongdqpayment/dqcai-logger.git"
  },
  "author": "Doan Quoc Cuong",
  "bugs": {
    "url": "https://github.com/cuongdqpayment/dqcai-logger/issues"
  },
  "homepage": "https://github.com/cuongdqpayment/dqcai-logger#readme"
}
